<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/transaction_status_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/approved" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:text="Approved" />


        <Button
            android:id="@+id/start_new_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/start_new_transaction"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/print_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/print_receipt"
            android:textAllCaps="false"
            android:textSize="20sp" />


    </LinearLayout>
</layout>